################
# EXPORTS      #
################

# Prompt
export SUDO_PS1='\[\033[01m\][ \[\033[01;31m\]\u@\h \[\033[00m\]\[\033[01m\]] \[\033[01;32m\]\w\[\033[00m\]\n\[\033[01;31m\]$\[\033[00m\]> '

# List
export CLICOLOR=1
export LSCOLORS=ExFxBxDxCxegedabagacad

# Docker
export DOCKER_TLS_VERIFY="1"
export DOCKER_HOST="tcp://192.168.99.100:2376"
export DOCKER_CERT_PATH="/Users/lony/.docker/machine/machines/default"
export DOCKER_MACHINE_NAME="default"

# PIP
export PIP_REQUIRE_VIRTUALENV=true
export PIP_DOWNLOAD_CACHE=$HOME/.pip/cache

################
# ALIASES      #
################

# List
alias ls='ls -Fh'
alias l='ls -a'
alias ll='ls -la'

# Delete
alias rm='rm -i'

# Grep
alias grep='grep --color'

# Python
alias p='python'

# Git
alias ga='git add'
alias gb='git branch'
alias gc='git commit'
alias gco='git checkout'
alias gm='git merge'
alias gs='git status -s'
alias gp='git pull && git fetch --prune'
# http://stackoverflow.com/questions/673407/how-do-i-clear-my-local-working-directory-in-git
# http://stackoverflow.com/questions/52704/how-do-you-discard-unstaged-changes-in-git
alias gclean='git reset --hard && git checkout -- . && git clean -ndxf'


